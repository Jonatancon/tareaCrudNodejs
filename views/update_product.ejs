<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Product</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Product</h2>
      <span class="text-dark">Use the below form to Update an Product</span>
    </div>
  </div>
  <!-- add user form -->
  <!-- form handling -->
  <form method="POST" id="update_product">
    <div class="row justify-content-md-center">
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="login-screen">
          <div class="login-box">
            <div class="row gutters">
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group m-3">
                  <input type="hidden" name="id" value="<%= product._id %>" />
                  <input
                    name="name"
                    value="<%= product.name %>"
                    type="text"
                    class="form-control"
                    placeholder="Name Product"
                  />
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group m-3">
                  <input
                    name="reference"
                    value="<%= product.reference %>"
                    type="text"
                    class="form-control"
                    placeholder="Reference Product"
                  />
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group m-3">
                  <input
                    type="number"
                    value="<%= product.stock %>"
                    name="stock"
                    class="form-control"
                    placeholder="Stock"
                  />
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group m-3">
                  <input
                    name="price"
                    value="<%= product.price %>"
                    type="text"
                    class="form-control"
                    placeholder="Price Product"
                  />
                </div>
              </div>
            </div>
            <div class="actions clearfix m-3">
              <button type="submit" class="btn btn-primary btn-block update">
                Update
              </button>
            </div>
            <div class="or"></div>
          </div>
        </div>
      </div>
    </div>
  </form>
  
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->